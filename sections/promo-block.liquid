{% for blocks in section.blocks %}
<div class="promo-block-image" style="background-image: url('{{blocks.settings.image | img_url: '1800x'}}');">

{% if blocks.settings.subtitle != blank %}
<p class="promo-block-subtile">{{ blocks.settings.subtitle }}</p>
 {% endif %}

{% if blocks.settings.main_title != blank %}
 <h1 class="promo-block-title">{{ blocks.settings.main_title }}</h1>
 {% endif %}
</div>
{% endfor %}

{% schema %}
{
  "name": "Promo Blocks",
  "class": "promo-block-section",
  "tag": "section",
  "settings":[
     {
       "id": "image",
       "type": "image_picker",
       "label": "Background Image"
     },
      {
       "id": "subtitle",
       "type": "text",
       "label": "Subtitle"
     },
      {
       "id": "main_title",
       "type": "text",
       "label": "Main title"
     }
   ]
  }
{% endschema %}
